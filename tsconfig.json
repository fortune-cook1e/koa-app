{
  "compilerOptions": {
      "module": "commonjs",
      "outDir": "./dist",
      "sourceMap": false,
      "target": "esnext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true,
      "allowJs": false,
      "allowSyntheticDefaultImports": true,
      "noUnusedLocals": false,
      "strictNullChecks": true,
      "noImplicitAny": false,
      "removeComments": false,
      "lib": [
        "esnext",
        "DOM"
      ]
  },
  "include": [
      "./src/**/*"
  ]
}